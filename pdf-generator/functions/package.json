{
  "name": "pdf-generator",
  "version": "<VERSION>",
  "description": "Generate PDF documents from templates stored in Firebase Storage",
  "author": "Sassan Haradji (sassanh@gmail.com)",
  "repository": "https://github.com/sassanh/template-to-pdf",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "publish": "cd ../..; ./scripts/publish.sh"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "chrome-aws-lambda": "^10.1.0",
    "firebase": "^9.9.0",
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^3.22.0",
    "get-port": "^6.1.2",
    "googleapis": "^105.0.0",
    "handlebars": "^4.7.7",
    "jszip": "^3.10.0",
    "node-fetch": "^3.2.10",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.7.1",
    "puppeteer": "^15.5.0",
    "typescript": "^4.5.4"
  },
  "private": true
}
