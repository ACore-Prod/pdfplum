{
  "name": "pdfplum",
  "version": "0.10.4",
  "description": "Generate PDF documents from templates stored in Firebase Storage",
  "author": "PDFPlum (hi@pdfplum.com)",
  "repository": "https://github.com/pdfplum/pdfplum",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "format": "eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "publish": "cd ../.. && ./scripts/publish.sh",
    "local:emulator": "cd ../../ && firebase emulators:start -P demo-test",
    "test": "jest"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/jest": "^29.4.0",
    "firebase": "^9.17.1",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1",
    "get-port": "^6.1.2",
    "googleapis": "^110.0.0",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.0",
    "puppeteer": "^18",
    "serve-static": "^1.15.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^3.0.0",
    "jest": "^29.4.1",
    "path": "^0.12.7",
    "ts-jest": "https://github.com/kulshekhar/ts-jest.git"
  },
  "private": true
}
